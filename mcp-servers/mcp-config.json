{
  "mcpServers": {
    "azure": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-azure"],
      "description": "Azure CLI operations",
      "env": {
        "AZURE_SUBSCRIPTION_ID": "${AZURE_SUBSCRIPTION_ID}"
      },
      "capabilities": ["az", "az aks", "az acr", "az keyvault", "az network", "az ad", "az security", "az purview"]
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-github"],
      "description": "GitHub CLI and API operations",
      "env": {
        "GITHUB_TOKEN": "${GITHUB_TOKEN}",
        "GH_TOKEN": "${GITHUB_TOKEN}"
      },
      "capabilities": ["gh repo", "gh secret", "gh api", "gh auth", "gh workflow", "gh release", "gh issue", "gh pr", "gh app", "gh extension"]
    },
    "terraform": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-terraform"],
      "description": "Terraform plan/apply",
      "env": {
        "TF_VAR_environment": "${ENVIRONMENT}"
      },
      "capabilities": ["terraform init", "terraform plan", "terraform apply", "terraform destroy", "terraform state"]
    },
    "kubernetes": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-kubernetes"],
      "description": "Kubernetes cluster operations",
      "env": {
        "KUBECONFIG": "${KUBECONFIG}"
      },
      "capabilities": ["kubectl get", "kubectl apply", "kubectl delete", "kubectl logs", "kubectl exec", "kubectl port-forward"]
    },
    "helm": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-helm"],
      "description": "Helm chart operations",
      "env": {},
      "capabilities": ["helm install", "helm upgrade", "helm uninstall", "helm repo", "helm search", "helm template"]
    },
    "docker": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-docker"],
      "description": "Docker container operations",
      "env": {},
      "capabilities": ["docker build", "docker push", "docker pull", "docker run"]
    },
    "git": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-git"],
      "description": "Git operations",
      "env": {},
      "capabilities": ["git clone", "git push", "git pull", "git commit", "git branch"]
    },
    "bash": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-bash"],
      "description": "Shell command execution",
      "env": {},
      "capabilities": ["bash", "sh", "curl", "jq", "yq"]
    },
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-filesystem"],
      "description": "File system operations",
      "env": {},
      "capabilities": ["read", "write", "list", "delete"]
    },
    "defender": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-azure"],
      "description": "Microsoft Defender for Cloud",
      "env": {},
      "capabilities": ["az security", "az security pricing", "az security assessment", "az security alert"]
    },
    "purview": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-azure"],
      "description": "Microsoft Purview Data Governance",
      "env": {},
      "capabilities": ["az purview", "az purview account", "az purview scan"]
    },
    "entra": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-azure"],
      "description": "Microsoft Entra ID (Azure AD) operations",
      "env": {},
      "capabilities": ["az ad app", "az ad sp", "az ad group", "az ad user", "az role assignment"]
    },
    "copilot": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-github"],
      "description": "GitHub Copilot CLI operations",
      "env": {},
      "capabilities": ["gh copilot", "gh copilot explain", "gh copilot suggest"]
    },
    "engineering-intelligence": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-github"],
      "description": "Engineering Intelligence metrics collection — DORA, Copilot, Security, Productivity via GitHub APIs",
      "env": {
        "GITHUB_TOKEN": "${GITHUB_TOKEN}",
        "GH_TOKEN": "${GITHUB_TOKEN}",
        "COPILOT_METRICS_TOKEN": "${COPILOT_METRICS_TOKEN}"
      },
      "capabilities": [
        "gh api /repos/{owner}/{repo}/pulls — PR cycle time and throughput",
        "gh api /repos/{owner}/{repo}/deployments — Deployment frequency",
        "gh api /repos/{owner}/{repo}/actions/runs — CI/CD health",
        "gh api /orgs/{org}/copilot/metrics — Copilot adoption and acceptance",
        "gh api /orgs/{org}/copilot/billing — Seat utilization",
        "gh api /repos/{owner}/{repo}/code-scanning/alerts — SAST posture",
        "gh api /repos/{owner}/{repo}/secret-scanning/alerts — Secret hygiene",
        "gh api /repos/{owner}/{repo}/dependabot/alerts — Dependency health",
        "gh api graphql — Complex PR/review/commit queries"
      ],
      "access-matrix": {
        "read-only": ["gh api /repos/*/pulls", "gh api /repos/*/deployments", "gh api /orgs/*/copilot/metrics", "gh api /repos/*/code-scanning/alerts"],
        "requires-confirmation": ["Write to PostgreSQL metric store", "Create RHDH plugin ConfigMap"],
        "forbidden": ["Expose individual developer metrics", "Access source code content", "Store tokens in files"]
      }
    },
    "backstage": {
      "url": "https://devhub.3horizons.ai/api/mcp-actions/v1",
      "description": "RHDH/Backstage MCP Actions — software catalog queries, TechDocs retrieval, and scaffolder operations via Streamable HTTP",
      "transport": "streamable-http",
      "headers": {
        "Authorization": "Bearer ${MCP_TOKEN}"
      },
      "env": {
        "RHDH_URL": "https://devhub.3horizons.ai",
        "MCP_TOKEN": "${MCP_TOKEN}"
      },
      "capabilities": [
        "catalog:query — search and filter entities by kind, type, owner, tags",
        "catalog:get — retrieve entity details with full metadata",
        "techdocs:list — list entities with TechDocs documentation",
        "techdocs:get — retrieve TechDocs content for an entity"
      ],
      "plugins": {
        "server": "@backstage/plugin-mcp-actions-backend",
        "tools": [
          "@red-hat-developer-hub/backstage-plugin-software-catalog-mcp-tool",
          "@red-hat-developer-hub/backstage-plugin-software-catalog-mcp-extras-backend",
          "@red-hat-developer-hub/backstage-plugin-techdocs-mcp-tool"
        ]
      },
      "references": [
        "https://developers.redhat.com/articles/2025/11/10/mcp-red-hat-developer-hub-chat-your-catalog",
        "https://github.com/backstage/backstage/tree/master/plugins/mcp-actions-backend",
        "https://github.com/redhat-developer/rhdh-plugins/tree/main/workspaces/mcp-integrations"
      ]
    }
  }
}
